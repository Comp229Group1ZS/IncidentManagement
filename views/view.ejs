<%- include('partials/header'); -%>
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">

        <%- include('partials/navbar'); -%>

            <div>

                <h1 class="mt-5">
                    <%= title %>
                </h1>
                <table class="table w-100">
                    <thead>
                        <tr>
                            <th class="light" scope="col">Serial</th>
                            <th class="light" scope="col">Title</th>
                            <th class="light" scope="col">Type</th>
                            <th class="light" scope="col">Place</th>
                            <th class="light" scope="col">Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let count=0; count < data.length; count++) { %>
                            <tr>

                                <th class="light" scope="row">
                                    <%= count+1 %>
                                </th>
                                <td class="light">
                                    <%= data[count].name %>
                                </td>
                                <td class="light">
                                    <%= data[count].type %>
                                </td>
                                <td class="light">
                                    <%= data[count].place %>
                                </td>
                                <td class="light">
                                    <%= data[count].date %>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>

            </div>
            <a href="/api/delete" class="btn btn-danger">Delete</a>
            <a href="/edit" class="btn mt-2 btn-success">Edit</a>
    </div>
    </div>

    <%- include('partials/footer'); -%>